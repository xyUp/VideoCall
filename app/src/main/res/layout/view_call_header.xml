<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <!--头像-->
    <com.xy.android.videocall.roundedimageview.RoundedImageView
        android:layout_width="@dimen/call_head_img_size"
        android:layout_height="@dimen/call_head_img_size"
        android:layout_margin="@dimen/blank_m"
        android:src="@mipmap/ic_launcher"
        app:riv_border_color="@color/colorTrans1"
        app:riv_border_width="@dimen/radius"
        app:riv_corner_radius="@dimen/blank_m"/>

    <!--提示-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtv_call_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingRight="@dimen/blank_m"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/call_head_top_text_size"/>

        <TextView
            android:id="@+id/txtv_call_header_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/blank_s"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_l"/>

    </LinearLayout>

</LinearLayout>