<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppThemeBlack" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--分割线横向-->
    <style name="TBBlank">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/blank_m</item>
        <item name="android:background">@color/colorGrayLight</item>
    </style>

    <!--分割线横向-->
    <style name="TBDivierH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divier_h</item>
        <item name="android:background">@color/colorDivier</item>
    </style>

    <!--分割线竖向-->
    <style name="TBDivierV">
        <item name="android:layout_width">@dimen/divier_h</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivier</item>
    </style>

    <!--去除回弹效果-->
    <style name="TBNoFadingEdge">
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:overScrollMode">never</item>
    </style>

